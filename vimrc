" ~/.vimrc

" $ sudo vim -u ~/.vimrc /etc/systemd/system.conf
" $ sudo vim -u /home/ljh/.vimrc /etc/systemd/system.conf

set autoindent
set hlsearch
set mouse=a  " Win:SHIFT+mouse, Mac:fn+mouse
set nobackup
set noswapfile
set nowrapscan
set nowritebackup
set tags=./tags  " $ ctags -R *, Ctrl-], Ctrl-t
syntax off
